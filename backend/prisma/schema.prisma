generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  fullName     String
  email        String   @unique
  password     String
  isCompany    Boolean
  isResident   Boolean
  isAdmin      Boolean  @default(false)
  companyType  String?  @default("")
  community    String?
  property     String?
  incidents    Incident[] // Campo de relaci√≥n inversa con Incident
}

model Incident {
  id           Int      @id @default(autoincrement())
  type         String
  description  String
  createdAt    DateTime @default(now())
  reportedBy   User     @relation(fields: [reportedById], references: [id])
  reportedById Int
}